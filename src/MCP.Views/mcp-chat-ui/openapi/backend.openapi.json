            "type": "object",
            "properties": {
              "input_token_count": {
                "type": "integer",
                "format": "int64",
                "nullable": true
              },
              "output_token_count": {
                "type": "integer",
                "format": "int64",
                "nullable": true
              },
              "total_token_count": {
                "type": "integer",
