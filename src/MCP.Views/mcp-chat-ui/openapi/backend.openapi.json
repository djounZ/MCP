          },
          "uri": {
            "type": "string",
            "format": "uri"
          },
          "media_type": {
            "type": "string"
          },
          "annotations": {
            "type": "array",
            "items": {
              "discriminator": {
                "propertyName": "$type",
                "mapping": {
                  "citation": "#/components/schemas/AiAnnotationAppModelCitationAnnotationAppModel"
                }
              }
            },
            "nullable": true
          }
